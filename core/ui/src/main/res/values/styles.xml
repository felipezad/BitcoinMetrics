<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ErrorActivityTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:textSize">14sp</item>
        <item name="android:justificationMode">none</item>
    </style>

    <style name="DefaultTextView">
        <item name="android:textSize">14sp</item>
        <item name="android:justificationMode">none</item>
    </style>

    <style name="BarDateLabelChart">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="BarLabelChart">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/purple_500</item>
    </style>

    <style name="errorViewStyle" parent="DefaultTextView">
        <item name="android:textSize">18sp</item>
        <item name="android:fontWeight">50</item>
        <item name="android:padding">20dp</item>
    </style>

    <style name="ImageView50Alpha">
        <item name="android:alpha">0.5</item>
    </style>

    <style name="Header1" parent="DefaultTextView">
        <item name="android:textSize">48sp</item>
        <item name="android:padding">20dp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="Header2" parent="DefaultTextView">
        <item name="android:textSize">34sp</item>
        <item name="android:padding">20dp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="FilterRow">
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:padding">5dp</item>
    </style>
</resources>